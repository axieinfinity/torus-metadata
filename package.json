{
  "name": "torus-metadata-js",
  "version": "1.0.0",
  "description": "Torus metadata server",
  "main": "index.js",
  "scripts": {
    "dev": "docker-compose -f docker-compose.dev.yml up --build",
    "down": "docker-compose -f docker-compose.dev.yml down",
    "serve": "nodemon --config nodemon.json src/index.ts",
    "build": "rimraf ./dist && tsc",
    "start": "ts-node src/index.ts",
    "prod": "node dist/src/index.js",
    "migrate": "npx knex migrate:unlock --knexfile ./src/database/knexfile.ts && npx knex migrate:latest --knexfile ./src/database/knexfile.ts",
    "migrate:down": "npx knex migrate:down --knexfile ./src/database/knexfile.ts",
    "lint:ts": "eslint --fix 'src/**/*.ts'",
    "prepare": "husky install",
    "test": "cross-env NODE_ENV=development LOG_DEBUG=yes mocha",
    "posttest": "docker-compose -f docker-compose-ci.yml down",
    "test:ci": "docker-compose -f docker-compose-ci.yml up --build --abort-on-container-exit --exit-code-from torus-metadata-js"
  },
  "keywords": [],
  "author": "Chaitanya Potti",
  "license": "ISC",
  "dependencies": {
    "@socket.io/redis-adapter": "^7.1.0",
    "celebrate": "^15.0.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^14.2.0",
    "elliptic": "^6.5.4",
    "express": "^4.17.2",
    "helmet": "^5.0.1",
    "js-sha3": "^0.8.0",
    "json-stable-stringify": "^1.0.1",
    "loglevel": "^1.8.0",
    "morgan": "^1.10.0",
    "socket.io": "^4.4.1"
  },
  "devDependencies": {
    "@toruslabs/eslint-config-node": "^0.1.5",
    "@types/node": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "eslint": "^8.7.0",
    "eslint-plugin-chai-expect": "^3.0.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-mocha": "^10.0.3",
    "eslint-plugin-n": "^14.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-security": "^1.4.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "husky": "^7.0.4",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --cache --fix",
      "prettier --write"
    ],
    "*.{json,yaml,yml}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/torusresearch/torus-metadata-js.git"
  },
  "bugs": {
    "url": "https://github.com/torusresearch/torus-metadata-js/issues"
  },
  "homepage": "https://github.com/torusresearch/torus-metadata-js#readme",
  "engines": {
    "node": ">=14.17.0",
    "npm": ">=6.x"
  }
}
